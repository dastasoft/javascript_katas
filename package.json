{
  "name": "javascript_katas",
  "version": "1.0.2",
  "description": "A collection of JavaScript challenges using TDD",
  "scripts": {
    "clean": "rm -rf ./node_modules",
    "format": "prettier --write ./src",
    "lint": "eslint ./src --fix",
